<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="0dp"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_weight="1"
        android:id="@+id/fCard"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fImage"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:background="@drawable/blogfeed_imagefour"
                    android:paddingLeft="10dp"

                    android:scaleType="center" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19.2sp"
                        android:id="@+id/fTitle"
                        android:padding="5dp"
                        android:textColor="#131314"
                        android:fontFamily="@font/colfax_medium"
                        android:lineSpacingExtra="4.8sp"
                        android:ellipsize = "marquee"
                        android:lines="3"
                        android:fadingEdge = "horizontal"
                        android:marqueeRepeatLimit = "marquee_forever"
                        android:scrollHorizontally = "true"
                        android:singleLine = "true"
                        android:text="Discovering the Beuaty of Street\nArt with John McDonald"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_above="@+id/view_layout"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="16.9dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="2.6sp"
                                android:text="@string/by_jaxon_in_travel"
                                android:textColor="#c2c2cc"
                                android:textSize="13.4sp"
                                android:id="@+id/fAuthor"
                                tools:ignore="MissingClass" />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:baselineAligned="true"
                            android:layout_height="50dp">
                            <com.like.LikeButton
                                app:icon_type="heart"
                                app:icon_size="25dp"
                                android:id="@+id/fFavorite"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>

